<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Folklora APP</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
</head>
<body>
  <%- include('partials/header') %>

  <main class="main-layout">
    <div class="content">
      <div class="cards-row">
          <!-- kartica za dodajanje kosa -->
          <div class="add-material-card">
              <h2>Dodaj nov kos</h2>
              <form id="add-material-form" enctype="multipart/form-data">
                  <div class="form-row">
                      <label for="ime">Naziv:</label>
                      <input type="text" name="ime" placeholder="vnesi naziv kosa" required>
                  </div>
                  <div class="form-row">
                      <label for="tip">Tip:</label>
                      <label><input type="radio" name="tip" value="slika" checked required>slika</label>
                      <label><input type="radio" name="tip" value="audio" disabled>audio</label>
                      <label><input type="radio" name="tip" value="video" disabled>video</label>
                      <label><input type="radio" name="tip" value="pdf" disabled>pdf</label>
                  </div>
                  <div class="form-row">
                      <input type="file" name="slika" id="slika" accept=".jpg,.jpeg">
                      <label for="slika" class="custom-file-label">Izberi .jpg ali .jpeg datoteko z naprave</label>
                  </div>
                  <button type="submit">Uvozi kos</button>
              </form>
          </div>

          <!-- kartica za dodajanje label -->
          <div class="add-label-card">
              <h2>Dodaj labelo</h2>
              <form id="add-label-form">
                  <div class="form-row">
                      <label for="naziv">Naziv:</label>
                      <input type="text" name="naziv" placeholder="vnesi naziv labele" required>
                  </div>
                  <div class="form-row">
                      <label for="tip" class="form-label" name="tip">Tip:</label>
                      <div class="radio-group">
                        <label class="radio-item"><input type="radio" name="tip" value="pokrajina" required>pokrajina</label>
                        <label class="radio-item"><input type="radio" name="tip" value="tip_oblacila" required>tip oblaƒçila</label>
                        <label class="radio-item"><input type="radio" name="tip" value="spol" required>spol</label>
                        <label class="radio-item"><input type="radio" name="tip" value="velikost" required>velikost</label>
                        <label class="radio-item"><input type="radio" name="tip" value="drugo" required>drugo</label>
                      </div>
                  </div>
                  <button type="submit">Dodaj</button>
              </form>
          </div>
      </div>

      <div id="material-container"></div>
    </div>

    <!-- sidebar -->
    <div class="sidebar">
    <h2>
        LABELE
        <span id="trash-container">
        <i class="fas fa-trash-alt" title="Povleci labelo v smetnjak"></i>
        </span>
    </h2>
    <div id="labels-container"></div>
    </div>
  </main>
    <%- include('partials/footer') %>

    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/material.js"></script>
    <script src="/javascripts/labels.js"></script>
</body>
</html>
